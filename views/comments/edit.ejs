<% include ../partials/header %>
<div class="container text-center">
    <div class="jumbotron">
        <br>
        <h3>Edit Comment</h3>
        <br>
        <div class="row justify-content-center">
            <form action="/locations/<%= location_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" value="<%= comment.text%>"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit</button>
                </div>
            </form>
        </div>
        <a href="/locations/<%= location_id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>