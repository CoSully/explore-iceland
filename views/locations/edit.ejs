<% include ../partials/header %>
<div class="container text-center">
    <div class="jumbotron">
        <br>
        <h3>Edit <%= location.name %></h3>
        <br>
        <div class="row justify-content-center">
            <form action="/locations/<%= location._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="location[name]" value="<%= location.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="location[distance]" value="<%= location.distance %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location[image]" value= "<%= location.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="location[description]" value="<%= location.description %>"></textarea>
                </div>  
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit</button>
                </div>
            </form>
        </div>
        <a href="/locations/<%= location._id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>